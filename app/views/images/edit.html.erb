<h2>Edit Image</h2>
<%= form_for @image, url: image_path(@image), html: { multipart: true } do |f| %>
  <%= f.file_field :attachment %>
  <%= f.text_field :title, placeholder: "Image title", class: "form-control", autofocus: true %>
   <div class="submit">
  <%= f.submit "Save Image" %>
  </div>
<% end %>