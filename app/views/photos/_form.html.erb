<div class='containter'>
 <div class='row'>
  <div class='col-sm-8 col-sm-offset-2'>
    <%= form_for @photo, html: {multipart: true} do |f| %>
      <% if params[:action] == 'new' %>
        <h2 class='text-center'>Add new photo</h2>
      <% elsif params[:action] == 'edit' %>
        <h2 class='text-center'>Edit photo</h2>
      <% end %>
      <%= render 'partials/flashMsg' %>
        <div class='form-group'>
          <%= f.label :title  %>
          <%= f.text_field :title, class:'form-control', autofocus: true %>
        </div>
        <div class='form-group'>
          <%= f.file_field :photo, class:'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :category %>
          <%= f.select :category_id, Category.all.collect {|category| [category.name, category.id] }, {:include_blank => 'Select one'}, class:'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :description %>
          <%= f.text_field :description, class:'form-control' %>
        </div>
        <div class='form-group'>
        <% if params[:action] == 'new' %>
          <%= f.submit 'Submit', class:'btn btn-small btn-primary' %>
          <%= link_to 'Cancel', photos_path, class:'btn btn-small btn-primary ' %>
        <% elsif params[:action] == 'edit' %>
          <%= f.submit 'Update', class:'btn btn-small btn-primary' %>
          <%= link_to 'Cancel', photos_path, class:'btn btn-small btn-primary ' %>
        </div>
        <% end %>
      <% end %>   
    </div>
  </div>
</div>