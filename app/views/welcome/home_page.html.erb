<%= render 'partials/navPartial' %>
<header id='first'>
  <div class='header-content'>
    <div class='inner'>
      <h1 class='cursive wow flipInX'>capture the moment</h1>
      <h4>Share with the world</h4>
      <hr>
      <br><br><br>
      <%= link_to '#one' do %>
          <i class='fa fa-angle-double-down' style='font-size: 60px; color: white;'></i>
        <% end %>
    </div>
  </div>
<!--   <video autoplay=' loop=' class='fillWidth fadeIn wow collapse in' data-wow-delay='0.1s' poster='https://s3-us-west-2.amazonaws.com/coverr/poster/Traffic-blurred2.jpg' id='video-background'>
