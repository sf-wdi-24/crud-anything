<%= render 'partials/navPartial' %>
<header id='first'>
  <div class='header-content'>
    <div class='inner'>
      <h1 class='cursive wow flipInX'>capture the moment</h1>
      <h4>Share with the world</h4>
      <hr>
      <br><br><br>
      <%= link_to '#one', class:'page-scroll' do %>
          <i class='fa fa-angle-double-down' style='font-size: 60px; color: white;'></i>
        <% end %>
    </div>
  </div>
  <video autoplay='' loop='' class='fillWidth fadeIn wow collapse in' data-wow-delay='0.1s' poster='https://s3-us-west-2.amazonaws.com/coverr/poster/Traffic-blurred2.jpg' id='video-background'>
    <source src='https://s3-us-west-2.amazonaws.com/coverr/mp4/Sail-Away.mp4' type='video/mp4'>Your browser does not support the video tag. I suggest you upgrade your browser.
  </video>
</header>
<section id='one' class='no-padding bg-dark'>
  <div class='container-fluid'>
    <div class='row no-gutter'>
    <% @photos.each do |photo|  %>
      <div class='col-lg-4 col-sm-6'>
      <a href='<%= photo.photo.normal.url.to_s %>' class='gallery-box' data-lightbox='my-photos' data-title='<%= photo.title %>'>
        <%= image_tag photo.photo.welcome.url.to_s, class:'img-responsive' %>
            <div class='gallery-box-caption'>
              <div class='gallery-box-content'>
                <div>
                  <i class='icon-lg ion-ios-search'></i>
                </div>
              </div>
            </div>
          </a>
      </div>
    <% end %>
    </div>
  </div>
</section>
<aside class='bg-dark' id='two'>
  <div class='container text-center'>
    <div class='call-to-action'>
      <h2 class='text-primary'>Get Started</h2>
      <%= link_to 'Sign Up Now', signup_path, class:'btn btn-primary btn-sm page-scroll' %>
    </div>
    <br>
    <hr/>
    <br>
    
  </div>
</aside>