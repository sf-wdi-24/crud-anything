= form_for @your_scaffold do |f|
  - if @your_scaffold.errors.any?
    #error_explanation
      %h2= "#{pluralize(@your_scaffold.errors.count, "error")} prohibited this your_scaffold from being saved:"
      %ul
        - @your_scaffold.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
